#linux  操作系统相关的编译命令定义

#C++ 源文件编译命令
CXX=g++ ${LNX_CFLAGS}
CC=gcc

#C++ 连接命令
LD=g++

#C++ 库生成命令
AR=ar -r

#C++ 编译时产生的临时目录，或文件。在make clean;或make clear时会删除
CXXCACHE= 
CCCACHE= $(CXXCACHE)

#对C++源代码编译时必须要加上的选项
SHARE_CXX_FLAGS=  
SHARE_CC_FLAGS= $(SHARE_CXX_FLAGS)

#生成共享动态库时必须要加上的选项。
SHARE_LINK_FLAGS= 
SHARE_LD_FLAGS= #-lpthread
SHARE_LIB_SUFFIX=so

